extends ./include/layout
include ./include/mixin
block own_style
    link(rel = 'stylesheet', href = 'css/project.css')
    script(src = './js/Project.min.js')
block content
    +scroll
    main.por.wild
        .kv.kv-wild
        .device.mac.wow.fadeInUp(style={opacity:0})
            +png('wild')
        section.introBox
            .left.wow.fadeInUp(style={opacity:0})
                h3 
                    span.break 無翅宣言官方網站
                    span.font-s (Pitch Vision)
                a(href="https://lichee-yeh.github.io/wildaid/" target='_blank') 
                    span VIEW WEBSITE
                    span.arrow
            .right.wow.fadeInUp(style={opacity:0})
                .intro
                    h4 Description
                    p 
                        span.break 全球每年有上千萬頭鯊魚被取魚翅死亡，因此WildAid推出「世界無翅宣言」連署平台，邀請各大企業和民眾一起「拒吃魚翅、愛護鯊魚」。
                        span.break 整體設計以大圖、海洋元素組成，風格簡潔，並用微動態的波浪及泡沫點綴，吸引user在頁面上的整個體驗。
                .intro
                    h4 Information
                    ul
                        li
                            span Project
                            span 無翅宣言官方網站
                        li
                            span Client
                            span WildAid 野生救援
                        li
                            span Year
                            span 2018
                        li
                            span Role
                            span 
                                span.break Responsive Web Design, UI Design,
                                span.break PSD to Html
        .mockup.wow.fadeInUp(style={opacity:0})
            +jpg('wild_layout')
        section.identity
            +sub-tt('identity')
            main
                .left.wow.fadeInUp(style={opacity:0})
                    .info
                        h4 typography
                        ul.typo
                            li.notoSans
                                p 思源黑體 Noto Sans CJK TC Regular
                                p.font-m 思源黑體 Noto Sans CJK TC Medium
                                p.font-b 思源黑體 Noto Sans CJK TC Bold
                .right.wow.fadeInUp(style={opacity:0})
                    .info
                        h4 color
                        ul.color.kids-color
                            li
                                .cir.cir1
                                p #2b7cb5
                            li
                                .cir.cir2
                                p #8fcde1
        section.layout
            +sub-tt('layout')
            .box.onePage 
                .page.page1.wow.fadeInUp(style={opacity:0})
                    +jpg('wild_layout2')
            .box.pageBoxOverlap
                .page.page2.wow.fadeInUp(style={opacity:0})
                    +jpg('wild-s1')
                .page.page3.wow.fadeInUp(style={opacity:0})
                    +jpg('wild-s2')
            .box.pageBoxOverlap
                .page.page2.wow.fadeInUp(style={opacity:0})
                    +jpg('wild-s3')
                .page.page3.wow.fadeInUp(style={opacity:0})
                    +jpg('wild-s4')
        +switchBox('house','eva-fool')